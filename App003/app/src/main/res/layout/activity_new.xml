<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity">

    <TextView
        android:id="@+id/txt_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="이름 : "
        />

    <!-- cf) width 의 값을 0dp 로 하면 margin 을 제외하고 화면에 가득 차게 된다. -->
    <!-- app:layout_constraintHorizontal_weight : 수평방향 요소들의 상대 크기 지정 -->
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_label1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="두번째 화면"/>

    <TextView
        android:id="@+id/txt_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_label1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="나이 : "
        />

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintStart_toEndOf="@+id/txt_label2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="두번째 화면"/>

</androidx.constraintlayout.widget.ConstraintLayout>